<%- include('navbar.ejs') %>

<div class="container mt-4">
  <h3 class="mb-4">Add New Service</h3>

  <form action="/admin/save_service" method="post">

    <!-- Service Title -->
    <div class="mb-3">
      <label class="form-label">Service Title</label>
      <input type="text" name="service_title" class="form-control"
              required>
    </div>

    <!-- Icon -->
    <div class="mb-3">
      <label class="form-label">Service Icon (Bootstrap Icons)</label>
      <input type="text" name="service_icon" class="form-control"
              required>
      <small class="text-muted">
      
      </small>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label class="form-label">Service Description</label>
      <textarea name="service_description" rows="3"
                class="form-control"
               
                required></textarea>
    </div>

    <!-- Points -->
    <div class="mb-3">
      <label class="form-label">
        Service Points 
      </label>
      <textarea name="service_points" rows="4"
                class="form-control"
                placeholder="Java Development, Python Development, Cloud & DevOps"
                required></textarea>
    </div>

    <button class="btn btn-primary">
      Save Service
    </button>

 

  </form>
</div>
<!-- table  -->
 <div class="container">
  <h1>Services Table</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Icon</th>
        <th>Description</th>
        <th>Points</th>
      </tr>
    </thead>

    <tbody>
      <% for(var i=0; i<services_data.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= services_data[i].service_title %></td>
          <td>
            <i class="<%= services_data[i].service_icon %>"></i>
            (<%= services_data[i].service_icon %>)
          </td>
          <td><%= services_data[i].service_description %></td>
          <td><%= services_data[i].service_points %></td>
          
        </tr>
      <% } %>
    </tbody>
  </table>
</div>


